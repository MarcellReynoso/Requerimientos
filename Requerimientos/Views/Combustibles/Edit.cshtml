@model Requerimientos.Models.Combustible

@{
    ViewData["Title"] = "Editar control de combustible";
}

<div class="px-0 px-md-3 py-md-3">
    <!-- Centro -->
    <div class="row justify-content-center">
        <div class="col-12 col-md-11 col-lg-8 col-xl-7">

            <!-- Encabezado -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h2 class="mb-0">Control de combustible</h2>
                    <small class="text-muted">Editar registro</small>
                </div>
            </div>

            <div class="card border-0">
                <div class="card-body p-0">
                    <form asp-action="Edit" method="post" id="frmCombustibleEdit" novalidate>
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div asp-validation-summary="ModelOnly"
                             class="alert alert-danger d-none"
                             role="alert"></div>

                        <div class="border rounded-4 p-3 bg-white">

                            <!-- Header con icono -->
                            <div class="d-flex align-items-center gap-2 mb-3">
                                <div class="rounded-3 d-flex align-items-center justify-content-center"
                                     style="width:38px;height:38px;background:rgba(13,110,253,.12);">
                                    <i class="bi bi-fuel-pump" style="font-size:1.2rem;"></i>
                                </div>
                                <div>
                                    <div class="fw-semibold">Datos del control</div>
                                    <small class="text-muted">ID: @Model.Id</small>
                                </div>
                            </div>

                            <div class="row g-3">

                                <!-- Fecha + Hora -->
                                <div class="col-12 col-md-6">
                                    <label asp-for="Fecha" class="form-label mb-1">
                                        Fecha <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Fecha" type="date" class="form-control" />
                                    <span asp-validation-for="Fecha" class="text-danger small"></span>
                                </div>

                                <div class="col-12 col-md-6">
                                    <label asp-for="HoraEntrega" class="form-label mb-1">
                                        Hora de entrega <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="HoraEntrega" type="time" class="form-control" />
                                    <span asp-validation-for="HoraEntrega" class="text-danger small"></span>
                                </div>

                                <!-- Selectlists -->
                                <div class="col-12 col-md-4">
                                    <label asp-for="ClaseId" class="form-label mb-1">
                                        Maquinaria <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="ClaseId" asp-items="ViewBag.Clases" class="form-select">
                                        <option value="" disabled>Seleccione una opción</option>
                                    </select>
                                    <span asp-validation-for="ClaseId" class="text-danger small"></span>
                                </div>

                                <div class="col-12 col-md-4">
                                    <label asp-for="ResponsableId" class="form-label mb-1">
                                        Responsable (quien entrega) <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="ResponsableId" asp-items="ViewBag.Trabajadores" class="form-select">
                                        <option value="" disabled>Seleccione una opción</option>
                                    </select>
                                    <span asp-validation-for="ResponsableId" class="text-danger small"></span>
                                </div>

                                <div class="col-12 col-md-4">
                                    <label asp-for="QuienRecibeId" class="form-label mb-1">
                                        Quién recibe <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="QuienRecibeId" asp-items="ViewBag.Trabajadores" class="form-select">
                                        <option value="" disabled>Seleccione una opción</option>
                                    </select>
                                    <span asp-validation-for="QuienRecibeId" class="text-danger small"></span>
                                </div>

                                <!-- Números -->
                                <div class="col-12 col-md-6">
                                    <label asp-for="GlnsEntregado" class="form-label mb-1">
                                        Glns entregado <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="GlnsEntregado" class="form-control" inputmode="decimal" type="number" step="0.01" autocomplete="off" />
                                    <span asp-validation-for="GlnsEntregado" class="text-danger small"></span>
                                </div>

                                <div class="col-12 col-md-6">
                                    <label asp-for="Litros" class="form-label mb-1">
                                        Litros <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Litros" class="form-control" inputmode="decimal" type="number" step="0.01" autocomplete="off"
                                        value="@Model.Litros?.ToString("F2", System.Globalization.CultureInfo.InvariantCulture)" />
                                    <span asp-validation-for="Litros" class="text-danger small"></span>
                                </div>

                                <div class="col-12 col-md-4">
                                    <label asp-for="GlnsXLitro" class="form-label mb-1">
                                        Glns x litro <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="GlnsXLitro" class="form-control" inputmode="decimal" type="number" step="any" autocomplete="off" />
                                    <span asp-validation-for="GlnsXLitro" class="text-danger small"></span>
                                </div>

                                <div class="col-12 col-md-4">
                                    <label asp-for="CostoXGalon" class="form-label mb-1">
                                        Costo x galón <span class="text-danger">*</span>
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text">S/</span>
                                        <input asp-for="CostoXGalon" 
                                            class="form-control" 
                                            inputmode="decimal" 
                                            type="number" 
                                            step="any" 
                                            autocomplete="off"
                                            value="@Model.CostoXGalon.ToString("F2", System.Globalization.CultureInfo.InvariantCulture)" />
                                    </div>
                                    <span asp-validation-for="CostoXGalon" class="text-danger small"></span>
                                </div>

                                <div class="col-12 col-md-4">
                                    <label asp-for="GalonesRecibidos" class="form-label mb-1">Galones recibidos</label>
                                    <input asp-for="GalonesRecibidos" 
                                        class="form-control" 
                                        inputmode="decimal" 
                                        type="number"
                                        value="@Model.GalonesRecibidos?.ToString("F2", System.Globalization.CultureInfo.InvariantCulture)"
                                        step="0.01" 
                                        autocomplete="off" />
                                    <span asp-validation-for="GalonesRecibidos" class="text-danger small"></span>
                                </div>

                                <!-- Calculados (solo lectura) -->
                                <div class="col-12 col-md-6">
                                    <label class="form-label mb-1">Total galones (calculado)</label>
                                    <input class="form-control" value="@Model.TotalGalones.ToString("F2", System.Globalization.CultureInfo.InvariantCulture)" readonly />
                                </div>

                                <div class="col-12 col-md-6">
                                    <label class="form-label mb-1">Precio total (calculado)</label>
                                    <div class="input-group">
                                        <span class="input-group-text">S/</span>
                                        <input class="form-control" value="@Model.PrecioTotal.ToString("F2", System.Globalization.CultureInfo.InvariantCulture)" readonly />
                                    </div>
                                </div>

                                <!-- Acciones (desktop) -->
                                <div class="d-none d-md-flex justify-content-between gap-2 mt-2">
                                    <a asp-action="Index" class="btn btn-secondary">
                                        <i class="bi bi-arrow-left"></i> Regresar
                                    </a>
                                    <button type="submit" form="frmCombustibleEdit" class="btn btn-primary">
                                        <i class="bi bi-floppy"></i> Guardar
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Acciones (mobile) -->
                        <div class="d-flex d-md-none gap-2 mt-4">
                            <a asp-action="Index" class="btn btn-secondary w-50">
                                <i class="bi bi-arrow-left"></i> Regresar
                            </a>
                            <button type="submit" class="btn btn-primary w-50">
                                <i class="bi bi-floppy"></i> Guardar
                            </button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
