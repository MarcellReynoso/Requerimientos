@model Requerimientos.Models.Trabajador

@{
    ViewData["Title"] = "Crear trabajador";
}

<div class="container-fluid px-0 px-md-3">
    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="mb-0">Crear trabajador</h2>
            <small class="text-muted">Registra un nuevo trabajador</small>
        </div>

        <!-- Botones (desktop) -->
        <div class="d-none d-md-flex gap-2">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Regresar
            </a>
            <button type="submit" form="frmTrabajadorCreate" class="btn btn-primary">
                <i class="bi bi-floppy"></i> Guardar
            </button>
        </div>
    </div>

    <div class="card border-0">
        <div class="card-body p-0">
            <form asp-action="Create" method="post" id="frmTrabajadorCreate" novalidate>
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly"
                     class="alert alert-danger d-none"
                     role="alert"
                     id="valSummaryCreate"></div>

                <div class="row g-3">
                    <!-- Columna 1: Datos personales -->
                    <div class="col-12 col-lg-6">
                        <div class="border rounded-4 p-3 h-100 bg-white">
                            <div class="d-flex align-items-center gap-2 mb-3">
                                <div class="rounded-3 d-flex align-items-center justify-content-center"
                                     style="width:38px;height:38px;background:rgba(13,110,253,.12);">
                                    <i class="bi bi-person-badge" style="font-size:1.2rem;"></i>
                                </div>
                                <div>
                                    <div class="fw-semibold">Datos personales</div>
                                    <div class="text-muted small">Identificación y puesto</div>
                                </div>
                            </div>

                            <div class="row g-3">
                                <div class="col-12">
                                    <label asp-for="Nombre" class="form-label mb-1">
                                        Nombre completo <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Nombre" class="form-control" placeholder="Ej: ERNESTO ACUACHI" autocomplete="off" />
                                    <span asp-validation-for="Nombre" class="text-danger small"></span>
                                </div>

                                <div class="col-12 col-md-6">
                                    <label asp-for="DNI" class="form-label mb-1">DNI</label>
                                    <input asp-for="DNI" class="form-control" placeholder="8 dígitos" maxlength="8" inputmode="numeric" />
                                    <span asp-validation-for="DNI" class="text-danger small"></span>
                                </div>

                                <div class="col-12 col-md-6">
                                    <label asp-for="Clase" class="form-label mb-1">Clase</label>
                                    <input asp-for="Clase" class="form-control" placeholder="Empleado / Obrero / Tercero" />
                                    <span asp-validation-for="Clase" class="text-danger small"></span>
                                </div>

                                <div class="col-12">
                                    <label asp-for="Cargo" class="form-label mb-1">Cargo</label>
                                    <input asp-for="Cargo" class="form-control" placeholder="Ej: Técnico, Supervisor, Operario..." />
                                    <span asp-validation-for="Cargo" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Columna 2: Cuentas bancarias -->
                    <div class="col-12 col-lg-6">
                        <div class="border rounded-4 p-3 h-100 bg-white">
                            <div class="d-flex align-items-center gap-2 mb-3">
                                <div class="rounded-3 d-flex align-items-center justify-content-center"
                                     style="width:38px;height:38px;background:rgba(25,135,84,.12);">
                                    <i class="bi bi-bank" style="font-size:1.2rem;"></i>
                                </div>
                                <div>
                                    <div class="fw-semibold">Cuentas bancarias</div>
                                    <div class="text-muted small">Nº de cuenta y CCI</div>
                                </div>
                            </div>

                            <div class="row g-3">
                                <!-- BBVA -->
                                <div class="col-12">
                                    <div class="border rounded-4 p-3">
                                        <div class="d-flex align-items-center justify-content-between mb-2">
                                            <span class="fw-semibold">BBVA</span>
                                        </div>

                                        <div class="row g-3">
                                            <div class="col-12 col-md-6">
                                                <label asp-for="NroBBVA" class="form-label mb-1">Nro BBVA</label>
                                                <input asp-for="NroBBVA" class="form-control" placeholder="Número de cuenta" />
                                                <span asp-validation-for="NroBBVA" class="text-danger small"></span>
                                            </div>

                                            <div class="col-12 col-md-6">
                                                <label asp-for="CCIBBVA" class="form-label mb-1">CCI BBVA</label>
                                                <input asp-for="CCIBBVA" class="form-control" placeholder="CCI" />
                                                <span asp-validation-for="CCIBBVA" class="text-danger small"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- BCP -->
                                <div class="col-12">
                                    <div class="border rounded-4 p-3">
                                        <div class="d-flex align-items-center justify-content-between mb-2">
                                            <span class="fw-semibold">BCP</span>
                                        </div>

                                        <div class="row g-3">
                                            <div class="col-12 col-md-6">
                                                <label asp-for="NroBCP" class="form-label mb-1">Nro BCP</label>
                                                <input asp-for="NroBCP" class="form-control" placeholder="Número de cuenta" />
                                                <span asp-validation-for="NroBCP" class="text-danger small"></span>
                                            </div>

                                            <div class="col-12 col-md-6">
                                                <label asp-for="CCIBCP" class="form-label mb-1">CCI BCP</label>
                                                <input asp-for="CCIBCP" class="form-control" placeholder="CCI" />
                                                <span asp-validation-for="CCIBCP" class="text-danger small"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Interbank -->
                                <div class="col-12">
                                    <div class="border rounded-4 p-3">
                                        <div class="d-flex align-items-center justify-content-between mb-2">
                                            <span class="fw-semibold">Interbank</span>
                                        </div>

                                        <div class="row g-3">
                                            <div class="col-12 col-md-6">
                                                <label asp-for="NroInterbank" class="form-label mb-1">Nro Interbank</label>
                                                <input asp-for="NroInterbank" class="form-control" placeholder="Número de cuenta" />
                                                <span asp-validation-for="NroInterbank" class="text-danger small"></span>
                                            </div>

                                            <div class="col-12 col-md-6">
                                                <label asp-for="CCIInterbank" class="form-label mb-1">CCI Interbank</label>
                                                <input asp-for="CCIInterbank" class="form-control" placeholder="CCI" />
                                                <span asp-validation-for="CCIInterbank" class="text-danger small"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="text-muted small mt-3">
                                <i class="bi bi-info-circle"></i> Las cuentas son opcionales (si no aplica, déjalas en blanco).
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Botones (mobile) -->
                <div class="d-flex d-md-none gap-2 mt-4">
                    <a asp-action="Index" class="btn btn-secondary w-50">
                        <i class="bi bi-arrow-left"></i> Regresar
                    </a>
                    <button type="submit" class="btn btn-primary w-50">
                        <i class="bi bi-floppy"></i> Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
