@model Requerimientos.Models.EntregaMaterial

@{
    ViewData["Title"] = "Detalle de entrega";
}

<div class="container-fluid px-0 px-md-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="mb-0">Entrega de materiales</h2>
            <small class="text-muted">Detalle del registro</small>
        </div>
        <div class="d-none d-md-flex gap-2">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Regresar
            </a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="bi bi-pencil-fill"></i> Editar
            </a>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <dl class="row mb-0">

                <dt class="col-sm-4 text-muted">Fecha</dt>
                <dd class="col-sm-8 fw-semibold">@Model.Fecha.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-4 text-muted">Producto</dt>
                <dd class="col-sm-8">
                    @Model.Producto?.Codigo - @Model.Producto?.Nombre
                </dd>

                <dt class="col-sm-4 text-muted">Unidad</dt>
                <dd class="col-sm-8">@Model.Producto?.Unidad?.Simbolo</dd>

                <dt class="col-sm-4 text-muted">Cantidad entregada</dt>
                <dd class="col-sm-8">@Model.CantidadEntregada.ToString("0.##")</dd>

                <dt class="col-sm-4 text-muted">A quién se entrega</dt>
                <dd class="col-sm-8">@Model.AQuienSeEntrega?.Nombre</dd>

                <dt class="col-sm-4 text-muted">Responsable</dt>
                <dd class="col-sm-8">@Model.Responsable?.Nombre</dd>

                <dt class="col-sm-4 text-muted">Material</dt>
                <dd class="col-sm-8">@Model.Material</dd>

                <dt class="col-sm-4 text-muted">Retorno</dt>
                <dd class="col-sm-8">@Model.Retorno</dd>

                <dt class="col-sm-4 text-muted">Hora salida</dt>
                <dd class="col-sm-8">@((Model.HoraSalida.HasValue) ? Model.HoraSalida.Value.ToString("HH:mm") : "")</dd>

                <dt class="col-sm-4 text-muted">Hora ingreso</dt>
                <dd class="col-sm-8">@((Model.HoraIngreso.HasValue) ? Model.HoraIngreso.Value.ToString("HH:mm") : "")</dd>

                <dt class="col-sm-4 text-muted">Fecha retorno</dt>
                <dd class="col-sm-8">@((Model.FechaRetorno.HasValue) ? Model.FechaRetorno.Value.ToString("dd/MM/yyyy") : "")</dd>

                <dt class="col-sm-4 text-muted">Creado</dt>
                <dd class="col-sm-8">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
            </dl>

            <div class="d-flex d-md-none gap-2 mt-3">
                <a asp-action="Index" class="btn btn-secondary w-50">
                    <i class="bi bi-arrow-left"></i> Regresar
                </a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning w-50">
                    <i class="bi bi-pencil-fill"></i> Editar
                </a>
            </div>
        </div>
    </div>
</div>
