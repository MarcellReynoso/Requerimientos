@model Requerimientos.Models.Unidad

@{
    ViewData["Title"] = "Editar unidad";
}

<div class="px-0 px-md-3 py-md-3">
    <div class="row justify-content-center">
        <div class="col-12 col-md-11 col-lg-8 col-xl-7">

            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h2 class="mb-0">Unidad</h2>
                </div>
            </div>

            <div class="card border-0">
                <div class="card-body p-0">
                    <form asp-action="Edit" method="post" novalidate>
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="border rounded-4 p-3 bg-white">

                            <div class="d-flex align-items-center gap-2 mb-3">
                                <div class="rounded-3 d-flex align-items-center justify-content-center"
                                     style="width:38px;height:38px;background:rgba(13,110,253,.12);">
                                    <iconify-icon icon="ic:outline-class" style="font-size:1.2rem;"></iconify-icon>
                                </div>
                                <div class="fw-semibold">Datos de la unidad</div>
                            </div>

                            <div class="row g-3">

                                <div class="col-12 col-md-6">
                                    <label asp-for="Nombre" class="form-label mb-1">Nombre <span class="text-danger">*</span></label>
                                    <input asp-for="Nombre" class="form-control" autofocus autocomplete="off"/>
                                </div>
                                <div class="col-12 col-md-6">
                                    <label asp-for="Simbolo" class="form-label mb-1">Simbolo <span class="text-danger">*</span></label>
                                    <input asp-for="Simbolo" class="form-control" autocomplete="off"/>
                                </div>

                                <div class="d-none d-md-flex justify-content-between gap-2">
                                    <a asp-action="Index" class="btn btn-secondary">
                                        <i class="bi bi-arrow-left"></i> Regresar
                                    </a>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-floppy"></i> Guardar
                                    </button>
                                </div>

                            </div>
                        </div>

                        <div class="d-flex d-md-none gap-2 mt-4">
                            <a asp-action="Index" class="btn btn-secondary w-50">
                                <i class="bi bi-arrow-left"></i> Regresar
                            </a>
                            <button type="submit" class="btn btn-primary w-50">
                                <i class="bi bi-floppy"></i> Guardar
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/js/unidades/simbolo-mayusculas.js"></script>
}