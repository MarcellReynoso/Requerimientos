@model Requerimientos.Models.Unidad

@{
    ViewData["Title"] = "Detalles de la unidad";
}

<div class="px-0 px-md-3 py-md-3">
    <div class="row justify-content-center">
        <div class="col-12 col-md-11 col-lg-8 col-xl-7">

            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h2 class="mb-0">Unidad</h2>
                </div>
            </div>

            <div class="card border-0">
                <div class="card-body p-0">
                    <div class="border rounded-4 p-3 bg-white">

                        <div class="d-flex align-items-center gap-2 mb-3">
                            <div class="rounded-3 d-flex align-items-center justify-content-center"
                                 style="width:38px;height:38px;background:rgba(13,110,253,.12);">
                                <iconify-icon icon="ic:outline-class" style="font-size:1.2rem;"></iconify-icon>
                            </div>
                            <div class="fw-semibold">Datos de la unidad</div>
                        </div>

                        <dl class="row g-2 mb-0">

                            <dt class="col-6 text-muted">Nombre</dt>
                            <dd class="col-6">@Model.Nombre</dd>
                            <dt class="col-6 text-muted">Simbolo</dt>
                            <dd class="col-6">@Model.Simbolo</dd>

                        </dl>
                    </div>

                    <div class="d-flex gap-2 mt-4">
                        <a asp-action="Index" class="btn btn-secondary w-50">
                            <i class="bi bi-arrow-left"></i> Regresar
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary w-50">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
