@model Requerimientos.Models.Proveedor

@{
    ViewData["Title"] = "Crear proveedor";
}

<div class="container-fluid px-0 px-md-3">
    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="mb-0">Nuevo proveedor</h2>
            <small class="text-muted">Registra un proveedor en el sistema</small>
        </div>

        <!-- Acciones (desktop) -->
        <div class="d-none d-md-flex gap-2">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Regresar
            </a>
            <button type="submit" form="frmProveedorCreate" class="btn btn-primary">
                <i class="bi bi-floppy"></i> Guardar
            </button>
        </div>
    </div>

    <div class="card border-0">
        <div class="card-body p-0">
            <form asp-action="Create" method="post" id="frmProveedorCreate" novalidate>
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly"
                     class="alert alert-danger d-none"
                     role="alert"
                     id="valSummaryCreate"></div>

                <div class="row g-3">
                    <!-- Columna única -->
                    <div class="col-12">
                        <div class="border rounded-4 p-3 bg-white">
                            <div class="d-flex align-items-center gap-2 mb-3">
                                <div class="rounded-3 d-flex align-items-center justify-content-center"
                                     style="width:38px;height:38px;background:rgba(13,110,253,.12);">
                                    <i class="bi bi-truck" style="font-size:1.2rem;"></i>
                                </div>
                                <div>
                                    <div class="fw-semibold">Información del proveedor</div>
                                    <div class="text-muted small">Datos básicos</div>
                                </div>
                            </div>

                            <div class="row g-3">
                                <div class="col-12">
                                    <label asp-for="Nombre" class="form-label mb-1">
                                        Nombre <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Nombre"
                                           class="form-control"
                                           placeholder="Razón social del proveedor"
                                           autocomplete="off" autofocus />
                                    <span asp-validation-for="Nombre" class="text-danger small"></span>
                                </div>

                                <div class="col-12 col-md-6">
                                    <label asp-for="RUC" class="form-label mb-1"></label>
                                    <input asp-for="RUC"
                                           class="form-control"
                                           placeholder="Ej: 20123456789"
                                           autocomplete="off"
                                           inputmode="numeric"
                                           maxlength="11" />
                                    <span asp-validation-for="RUC" class="text-danger small"></span>

                                    <div class="form-text">
                                        <i class="bi bi-info-circle"></i> Si no aplica, puedes dejarlo vacío.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Acciones (mobile) -->
                <div class="d-flex d-md-none gap-2 mt-4">
                    <a asp-action="Index" class="btn btn-secondary w-50">
                        <i class="bi bi-arrow-left"></i> Regresar
                    </a>
                    <button type="submit" class="btn btn-primary w-50">
                        <i class="bi bi-floppy"></i> Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
