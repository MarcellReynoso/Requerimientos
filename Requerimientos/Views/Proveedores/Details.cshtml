@model Requerimientos.Models.Proveedor

@{
    ViewData["Title"] = "Detalle de proveedor";
}

<div class="container-fluid px-0 px-md-3">
    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="mb-0">Detalle de proveedor</h2>
            <small class="text-muted">ID: @Model.Id</small>
        </div>

        <!-- Acciones (desktop) -->
        <div class="d-none d-md-flex gap-2">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Regresar
            </a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="bi bi-pencil-square"></i> Editar
            </a>
        </div>
    </div>

    <div class="card border-0">
        <div class="row g-3">
            <!-- Información -->
            <div class="col-12">
                <div class="border rounded-4 p-3 h-100 bg-white">
                    <div class="d-flex align-items-center gap-2 mb-3">
                        <div class="rounded-3 d-flex align-items-center justify-content-center"
                             style="width:38px;height:38px;background:rgba(13,110,253,.12);">
                            <i class="bi bi-truck" style="font-size:1.2rem;"></i>
                        </div>
                        <div>
                            <div class="fw-semibold">Información del proveedor</div>
                            <div class="text-muted small">Datos registrados</div>
                        </div>
                    </div>

                    <dl class="row mb-0">
                        <dt class="col-4 text-muted fw-normal">Nombre</dt>
                        <dd class="col-8 mb-2">@Html.DisplayFor(m => m.Nombre)</dd>

                        <dt class="col-4 text-muted fw-normal">RUC</dt>
                        <dd class="col-8 mb-0">
                            @(string.IsNullOrWhiteSpace(Model?.RUC) ? "Sin número" : Html.DisplayFor(m => m.RUC))
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Acciones (mobile) -->
        <div class="d-flex d-md-none gap-2 mt-4">
            <a asp-action="Index" class="btn btn-secondary w-50">
                <i class="bi bi-arrow-left"></i> Regresar
            </a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary w-50">
                <i class="bi bi-pencil-square"></i> Editar
            </a>
        </div>
    </div>
</div>
