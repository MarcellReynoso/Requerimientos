@model Requerimientos.Models.Vehiculo

@{
    ViewData["Title"] = "Crear vehiculo";
}

<div class="container-fluid px-0 px-md-3">
    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="mb-0">Nuevo vehiculo</h2>
            <small class="text-muted">Registre la información</small>
        </div>

        <!-- Acciones (desktop) -->
        <div class="d-none d-md-flex gap-2">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Regresar
            </a>
            <button type="submit" form="frmVehiculoCreate" class="btn btn-primary">
                <i class="bi bi-floppy"></i> Guardar
            </button>
        </div>
    </div>

    <div class="card border-0">
        <div class="card-body p-0">
            <form asp-action="Create" method="post" id="frmVehiculoCreate" novalidate>
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly"
                     class="alert alert-danger"
                     role="alert"
                     id="valSummaryCreate"></div>

                <div class="row g-3">
                    <div class="col-12">
                        <div class="border rounded-4 p-3 bg-white">
                            <div class="d-flex align-items-center gap-2 mb-3">
                                <div class="rounded-3 d-flex align-items-center justify-content-center"
                                     style="width:38px;height:38px;background:rgba(13,110,253,.12);">
                                    <iconify-icon icon="fluent:vehicle-car-profile-ltr-24-filled" style="font-size:1.2rem;"></iconify-icon>
                                </div>
                                <div>
                                    <div class="fw-semibold">Información del vehiculo</div>
                                    <div class="text-muted small">Datos básicos</div>
                                </div>
                            </div>

                            <div class="row g-3">
                                <!-- Placa -->
                                <div class="col-12 col-md-6">
                                    <label asp-for="Placa" class="form-label mb-1">
                                        Placa <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Placa"
                                           class="form-control"
                                           placeholder="Ej: Z4F-471"
                                           autocomplete="off" autofocus />
                                    <span asp-validation-for="Placa" class="text-danger small"></span>
                                </div>

                                <!-- Clase -->
                                <div class="col-12 col-md-6">
                                    <label asp-for="ClaseId" class="form-label mb-1">
                                        Clase <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="ClaseId" asp-items="ViewBag.Clases" class="form-select">
                                        <option value="" disabled selected>Seleccione una opción</option>
                                    </select>
                                    <span asp-validation-for="ClaseId" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Acciones (mobile) -->
                <div class="d-flex d-md-none gap-2 mt-4">
                    <a asp-action="Index" class="btn btn-secondary w-50">
                        <i class="bi bi-arrow-left"></i> Regresar
                    </a>
                    <button type="submit" class="btn btn-primary w-50">
                        <i class="bi bi-floppy"></i> Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
